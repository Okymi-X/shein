# SHEIN_SEN - Configuration Environment Variables
# Copiez ce fichier vers .env et remplissez vos vraies valeurs

# =============================================================================
# OpenAI Configuration
# =============================================================================
# Obtenez votre clé API sur: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# =============================================================================
# Twilio WhatsApp Configuration
# =============================================================================
# Créez un compte sur: https://www.twilio.com
# Activez WhatsApp Sandbox: https://console.twilio.com/us1/develop/sms/try-it-out/whatsapp-learn
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Numéro WhatsApp de l'administrateur (format: whatsapp:+221XXXXXXXXX)
ADMIN_WHATSAPP_NUMBER=whatsapp:+221XXXXXXXXX

# =============================================================================
# Google Sheets Configuration (Optionnel)
# =============================================================================
# Si vous voulez utiliser Google Sheets au lieu d'Excel local
# Guide: https://developers.google.com/sheets/api/quickstart/python
GOOGLE_SHEETS_CREDENTIALS_FILE=path/to/your/credentials.json
GOOGLE_SHEETS_SPREADSHEET_ID=your-google-spreadsheet-id

# =============================================================================
# Application Configuration
# =============================================================================
# Port pour le serveur WhatsApp webhook
WHATSAPP_PORT=5000

# URL de base pour les webhooks (en production)
BASE_URL=https://your-domain.com

# =============================================================================
# Shein Automation Configuration
# =============================================================================
# Activer l'ajout automatique au panier Shein (true/false)
AUTO_ADD_TO_CART=false

# Délai entre les ajouts au panier (en secondes)
CART_ADDITION_DELAY=5

# Intervalle de traitement automatique (en minutes)
AUTO_PROCESS_INTERVAL=30

# =============================================================================
# AI Processing Configuration
# =============================================================================
# Modèle OpenAI à utiliser
OPENAI_MODEL=gpt-4

# Température pour la génération (0.0 à 1.0)
OPENAI_TEMPERATURE=0.1

# Nombre maximum de tokens par requête
OPENAI_MAX_TOKENS=500

# =============================================================================
# Limits and Security
# =============================================================================
# Limite d'articles par utilisateur
MAX_ITEMS_PER_USER=10

# Limite d'articles par jour par utilisateur
MAX_ITEMS_PER_DAY=5

# Activer la validation stricte des URLs Shein
STRICT_URL_VALIDATION=true

# =============================================================================
# Logging Configuration
# =============================================================================
# Niveau de log (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Rotation des logs (en jours)
LOG_RETENTION_DAYS=30

# =============================================================================
# Database Configuration
# =============================================================================
# Type de base de données (excel, google_sheets)
DATABASE_TYPE=excel

# Chemin vers le fichier Excel (si DATABASE_TYPE=excel)
EXCEL_FILE_PATH=data/orders.xlsx

# =============================================================================
# Notification Configuration
# =============================================================================
# Activer les notifications admin
ADMIN_NOTIFICATIONS=true

# Fréquence des rapports automatiques (daily, weekly)
AUTO_REPORT_FREQUENCY=daily

# Heure pour le rapport quotidien (format HH:MM)
DAILY_REPORT_TIME=23:00

# =============================================================================
# Development Configuration
# =============================================================================
# Mode debug (true/false)
DEBUG_MODE=false

# Activer les logs détaillés
VERBOSE_LOGGING=false

# Simuler les ajouts Shein (pour tests)
SIMULATE_SHEIN_ACTIONS=false